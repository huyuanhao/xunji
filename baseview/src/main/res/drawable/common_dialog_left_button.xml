<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="0" android:exitFadeDuration="200">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_normal_press" />
            <corners android:bottomLeftRadius="@dimen/common_dialog_corner_radius" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:bottomLeftRadius="@dimen/common_dialog_corner_radius" />
        </shape>
    </item>
</selector>