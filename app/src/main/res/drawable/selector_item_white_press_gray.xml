<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:shape="rectangle">
        <!--选中状态-->
        <shape >
            <solid android:color="@color/color_normal_press" />
        </shape>
    </item>

    <!--默认状态-->
    <item android:state_selected="false"  android:shape="rectangle">
        <shape>
            <solid android:color="@color/color_FFFFFF" />
        </shape>
    </item>
</selector>