<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:minHeight="50dp"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="@drawable/selector_item_white_press_gray"
    android:orientation="vertical">

    <ImageView
        android:layout_centerVertical="true"
        android:src="@mipmap/icon_poi_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout

        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_marginLeft="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvTop"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="14sp"
            android:text="中威大厦"
            android:textColor="@color/color_1C1C1C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvBottom"
            android:layout_marginTop="5dp"
            android:textSize="10sp"
            android:text="广东省-东莞市-南城区-莞太大道113号中威大厦附近"
            android:textColor="@color/color_ABABAB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>

