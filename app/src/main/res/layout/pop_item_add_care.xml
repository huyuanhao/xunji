<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/common_dialog_bg"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="添加关心的人"
            android:textColor="@color/COLOR_1C1C1C"
            android:textSize="18sp" />


        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_add_care_bg"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="40dp">
            <TextView
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:text="我是"
                android:textColor="@color/color_1C1C1C"
                android:layout_height="match_parent" />
            <EditText
                android:layout_marginLeft="5dp"
                android:selectAllOnFocus="true"
                android:id="@+id/etNickName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="15dp"
                android:background="@null"
                android:maxLength="6"
                android:hint="我的昵称"
                android:textColor="@color/COLOR_1C1C1C"
                android:textColorHint="@color/color_text_hit"
                android:textSize="15sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_add_care_bg"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@null"
                android:maxLength="11"
                android:inputType="phone"
                android:hint="请输入对方手机号"
                android:textColor="@color/COLOR_1C1C1C"
                android:textColorHint="@color/color_text_hit"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tvMobileContact"
                android:text="通讯录"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:gravity="center"
                android:textColor="@drawable/selector_tv_theme_press"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:gravity="center"
            android:lineSpacingMultiplier="1.2"
            android:text="输入对方手机号，对方同意接受您的申请，即可实时获得对方位置" />
    </LinearLayout>


    <Button
        android:id="@+id/btSubmit"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="@dimen/general_margin"
        android:background="@drawable/selector_btn_c25_theme_press"
        android:text="请求添加位置共享"
        android:textColor="@color/color_FFFFFF"
        android:textSize="15sp" />


    <ImageView
        android:id="@+id/ivPopClose"
        android:layout_marginTop="270dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/icon_pop_close"
        android:layout_width="30dp"
        android:layout_height="30dp" />
</FrameLayout>
