<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="20dp"
    android:background="@mipmap/icon_care_bg"
    android:orientation="vertical">

    <FrameLayout
        android:layout_margin="10dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/icon_avatar_deafult" />
        <ImageView
            android:id="@+id/ivOnlineStatus"
            android:layout_gravity="bottom|center_horizontal"
            tools:src="@mipmap/icon_online_s"
            android:layout_width="26dp"
            android:layout_height="12dp"/>
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="50dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:includeFontPadding="false"
                tools:text="小小小小小小小小小小小小小"
                android:singleLine="true"
                android:maxEms="6"
                android:ellipsize="end"
                android:textColor="@color/color_1C1C1C"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:includeFontPadding="false"
                android:text="05-20 11:00:00"
                android:textColor="@color/color_ABABAB"
                android:textSize="10sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvLast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:includeFontPadding="false"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="2"
            tools:text="最后位置：东莞市南城区莞太大道113号中威大厦附近"
            android:textColor="@color/color_ABABAB"
            android:textSize="12sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/tvDeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:text="接受"
        android:textSize="12sp" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/ivNoVip"
        android:layout_width="30dp"
        android:layout_height="10dp"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/icon_vip_n"
        />

</RelativeLayout>

